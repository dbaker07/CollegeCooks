<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!--Title of the the tab-->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:text="@string/upload_a_recipe" />

    <!--Allows the user to scroll when one page becomes too small for a recipe-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--User inputs their recipe name here *MUST BE PRESENT IN ORDER FOR RECIPE TO UPLOAD*-->
            <EditText
                android:id="@+id/recipeNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="@string/recipe_name"
                android:importantForAutofill="no"
                android:inputType="textCapWords"
                android:minHeight="48dp"
                android:textColorHint="#546E7A"
                tools:ignore="VisualLintTextFieldSize" />
            <!--User inputs the duration of their recipe here (a safeguard may be added later for if a user forgets to put units)
            *MUST BE PRESENT IN ORDER FOR RECIPE TO UPLOAD*-->

            <EditText
                android:id="@+id/durationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="@string/duration"
                android:importantForAutofill="no"
                android:inputType="textCapWords"
                android:minHeight="48dp"
                android:textColorHint="#546E7A" />
            <!--Ingredient 1 Info *MUST BE PRESENT IN ORDER FOR RECIPE TO UPLOAD*-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">
                <!--User inputs the numerical amount of an ingredient here-->
                <EditText
                    android:id="@+id/amt1EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/amount_1_hint"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:textColorHint="#546E7A" />
                <!--User inputs the unit of the numerical amount of an ingredient here-->
                <EditText
                    android:id="@+id/unit1EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/unit_1_hint"
                    android:importantForAutofill="no"
                    android:inputType="textCapWords"
                    android:minHeight="48dp"
                    android:textColorHint="#546E7A" />
                <!--User inputs the name of the ingredient here-->
                <EditText
                    android:id="@+id/ingredient1EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="top"
                    android:hint="@string/ingredient1"
                    android:importantForAutofill="no"
                    android:inputType="textCapWords"
                    android:minHeight="48dp"
                    android:textColorHint="#546E7A" />
            </LinearLayout>

            <!--Ingredient 2 Info *MUST BE PRESENT IN ORDER FOR RECIPE TO UPLOAD*-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">
                <!--User inputs the numerical amount of an ingredient here-->
                <EditText
                    android:id="@+id/amt2EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/amount_2_hint"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:textColorHint="#546E7A" />
                <!--User inputs the unit of the numerical amount of an ingredient here-->
                <EditText
                    android:id="@+id/unit2EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/unit_2_hint"
                    android:importantForAutofill="no"
                    android:inputType="textCapWords"
                    android:minHeight="48dp"
                    android:textColorHint="#546E7A" />
                <!--User inputs the name of the ingredient here-->
                <EditText
                    android:id="@+id/ingredient2EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="top"
                    android:hint="@string/ingredient2"
                    android:importantForAutofill="no"
                    android:inputType="textCapWords"
                    android:minHeight="48dp"
                    android:textColorHint="#546E7A" />
            </LinearLayout>
            <!-- Ingredient 3 Info *MUST BE PRESENT IN ORDER FOR RECIPE TO UPLOAD*-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">
                <!--User inputs the numerical amount of an ingredient here-->
                <EditText
                    android:id="@+id/amt3EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/amount_3_hint"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:textColorHint="#546E7A" />
                <!--User inputs the unit of the numerical amount of an ingredient here-->
                <EditText
                    android:id="@+id/unit3EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/unit_3_hint"
                    android:importantForAutofill="no"
                    android:inputType="textCapWords"
                    android:minHeight="48dp"
                    android:textColorHint="#546E7A" />
                <!--User inputs the name of the ingredient here-->
                <EditText
                    android:id="@+id/ingredient3EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="top"
                    android:hint="@string/ingredient3"
                    android:importantForAutofill="no"
                    android:inputType="textCapWords"
                    android:minHeight="48dp"
                    android:textColorHint="#546E7A" />
            </LinearLayout>
            <!--Ingredient 4 Info (can be filled out but isn't required - only saved if all the ingredient is filled out)-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">
                <!--User inputs the numerical amount of an ingredient here-->
                <EditText
                    android:id="@+id/amt4EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/amount_4_hint"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:textColorHint="#546E7A" />
                <!--User inputs the unit of the numerical amount of an ingredient here-->
                <EditText
                    android:id="@+id/unit4EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/unit_4_hint"
                    android:importantForAutofill="no"
                    android:inputType="textCapWords"
                    android:minHeight="48dp"
                    android:textColorHint="#546E7A" />
                <!--User inputs the name of the ingredient here-->
                <EditText
                    android:id="@+id/ingredient4EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="top"
                    android:hint="@string/ingredient4"
                    android:importantForAutofill="no"
                    android:inputType="textCapWords"
                    android:minHeight="48dp"
                    android:textColorHint="#546E7A" />
            </LinearLayout>
            <!--Ingredient 5 Info (can be filled out but isn't required - only saved if all the ingredient is filled out)-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">
                <!--User inputs the numerical amount of an ingredient here-->
                <EditText
                    android:id="@+id/amt5EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/amount_5_hint"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:textColorHint="#546E7A" />
                <!--User inputs the unit of the numerical amount of an ingredient here-->
                <EditText
                    android:id="@+id/unit5EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/unit_5_hint"
                    android:importantForAutofill="no"
                    android:inputType="textCapWords"
                    android:minHeight="48dp"
                    android:textColorHint="#546E7A" />
                <!--User inputs the name of the ingredient here-->
                <EditText
                    android:id="@+id/ingredient5EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="top"
                    android:hint="@string/ingredient5"
                    android:importantForAutofill="no"
                    android:inputType="textCapWords"
                    android:minHeight="48dp"
                    android:textColorHint="#546E7A" />
            </LinearLayout>

            <!--Allows the user to select an image to be displayed with the recipe (currently photos aren't saved to firebase)-->
            <ImageView
                android:id="@+id/recipeImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:background="#ccc"
                android:contentDescription="@string/recipe_image"
                android:scaleType="centerCrop"
                tools:ignore="ImageContrastCheck" />

             <Button
                 android:id="@+id/selectImageButton"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="16dp"
                 android:backgroundTint="@color/ccOtherRed"
                 android:textColor="@color/white"
                 android:minHeight="48dp"
                 android:text="@string/select_image" />
            <!--User inputs the directions to prepare the recipe here *MUST BE PRESENT IN ORDER FOR RECIPE TO UPLOAD*-->
            <EditText
                android:id="@+id/DirectionsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:gravity="top"
                android:hint="@string/directions"
                android:importantForAutofill="no"
                android:inputType="textMultiLine|textCapSentences"
                android:maxWidth="488dp"
                android:minHeight="48dp"
                tools:ignore="VisualLintTextFieldSize" />
            <!--This is pressed when the user is ready to upload their recipe (As long as all require components are present)-->
             <Button
                 android:id="@+id/uploadButton"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="end"
                 android:backgroundTint="@color/ccOtherRed"
                 android:textColor="@color/white"
                 android:minHeight="48dp"
                 android:text="@string/upload_recipe" />

         </LinearLayout>

    </ScrollView>


    <!--Bottom navigation bar - allows the user to navigate the tabs of the app-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu"
        tools:ignore="VisualLintBounds" />
</LinearLayout>